---
const navLinks = [
  { href: "/schedule", label: "Schedule" },
  { href: "/history", label: "History" },
  { href: "/about", label: "About" },
  { href: "/contact", label: "Contact" },
];
const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-background/80 backdrop-blur-md">
  <div class="max-w-6xl mx-auto px-6">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group">
        <img
          src="/logo.jpg"
          alt=""
          width="32"
          height="32"
          class="w-8 h-8 rounded-lg object-cover transition-transform group-hover:scale-105"
          aria-hidden="true"
        />
        <span class="font-medium text-foreground tracking-tight">Barbary Coast</span>
      </a>

      <!-- Navigation -->
      <nav class="flex items-center gap-1" aria-label="Main navigation">
        {navLinks.map(({ href, label }) => (
          <a
            href={href}
            class:list={[
              "px-4 py-2 text-sm rounded-full transition-all",
              currentPath === href
                ? "bg-foreground text-background font-medium"
                : "text-muted hover:text-foreground hover:bg-surface-elevated",
            ]}
            aria-current={currentPath === href ? "page" : undefined}
          >
            {label}
          </a>
        ))}
      </nav>
    </div>
  </div>
</header>

<!-- Spacer for fixed header -->
<div class="h-16"></div>
