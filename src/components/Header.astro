---
const navLinks = [
  { href: "/", label: "Home" },
  { href: "/about", label: "About" },
  { href: "/schedule", label: "Schedule" },
  { href: "/contact", label: "Contact" },
];
const currentPath = Astro.url.pathname;
---

<header class="fixed inset-x-0 top-0 z-50 backdrop-blur-md bg-background/90 border-b border-border">
  <div class="mx-auto w-full max-w-5xl px-4 py-3">
    <div class="relative flex items-center justify-between">
      <a href="/" class="flex items-center gap-3 text-foreground">
        <img
          src="/logo.jpg"
          alt=""
          class="w-8 h-8 object-cover"
          aria-hidden="true"
        />
        <span class="text-sm font-semibold">Barbary Coast Lacrosse Club</span>
      </a>

      <nav class="flex items-center gap-1 font-mono text-xs" aria-label="Main navigation">
        {navLinks.map(({ href, label }) => (
          <a
            href={href}
            class:list={[
              "px-3 py-1.5 transition-colors",
              currentPath === href
                ? "text-foreground bg-foreground/5"
                : "text-muted hover:text-foreground",
            ]}
            aria-current={currentPath === href ? "page" : undefined}
          >
            {label}
          </a>
        ))}
      </nav>
    </div>
  </div>
</header>

<div class="h-[57px]" aria-hidden="true"></div>
