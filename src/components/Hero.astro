---
interface Props {
  showCTA?: boolean;
}

const { showCTA = true } = Astro.props;
---

<section class="relative min-h-[80vh] flex items-center overflow-hidden" aria-label="Hero">
  <!-- Animated orbs -->
  <div class="orb w-96 h-96 bg-powder/30 -top-20 -left-20" style="animation-delay: 0s;" aria-hidden="true"></div>
  <div class="orb w-80 h-80 bg-gold/30 top-1/2 right-0" style="animation-delay: -3s;" aria-hidden="true"></div>

  <div class="relative w-full py-20">
    <div class="max-w-6xl mx-auto px-6">
      <!-- Main headline -->
      <h1 class="text-foreground max-w-4xl">
        Barbary Coast
        <span class="text-muted">Lacrosse</span>
      </h1>

      <p class="mt-8 text-xl text-muted max-w-lg">
        San Francisco men's lacrosse. Practice Wednesdays, compete Sundays.
      </p>

      {showCTA && (
        <div class="flex flex-wrap gap-4 mt-10">
          <a href="/schedule" class="btn btn-primary">
            View schedule
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a href="/contact" class="btn btn-secondary">
            Join the team
          </a>
        </div>
      )}
    </div>
  </div>
</section>

<!-- Marquee strip -->
<div class="marquee border-y border-border py-4 bg-surface">
  <div class="marquee-content">
    {[...Array(2)].map(() => (
      <div class="flex items-center gap-12 px-6">
        <span class="mono text-muted whitespace-nowrap">ULAX SF League</span>
        <span class="w-1.5 h-1.5 rounded-full bg-powder"></span>
        <span class="mono text-muted whitespace-nowrap">Beach Chalet Fields</span>
        <span class="w-1.5 h-1.5 rounded-full bg-gold"></span>
        <span class="mono text-muted whitespace-nowrap">Est. 2024</span>
        <span class="w-1.5 h-1.5 rounded-full bg-powder"></span>
        <span class="mono text-muted whitespace-nowrap">San Francisco, CA</span>
        <span class="w-1.5 h-1.5 rounded-full bg-gold"></span>
      </div>
    ))}
  </div>
</div>
