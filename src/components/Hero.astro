---
interface Props {
  showCTA?: boolean;
}

const { showCTA = true } = Astro.props;
---

<section class="relative pt-16 pb-24" aria-label="Hero">
  <div class="max-w-5xl mx-auto px-4">
    <div class="flex flex-col items-center text-center">
      <!-- Logo -->
      <div class="mb-8">
        <img
          src="/logo.jpg"
          alt="Barbary Coast Lacrosse logo"
          class="w-28 h-28 sm:w-36 sm:h-36 object-cover border border-border"
        />
      </div>

      <!-- Label -->
      <span class="label text-muted mb-4">San Francisco Lacrosse</span>

      <!-- Headline -->
      <h1 class="text-3xl sm:text-5xl lg:text-6xl text-foreground leading-tight tracking-tight">
        Barbary Coast
      </h1>

      <!-- Tagline -->
      <p class="mt-4 max-w-md text-base sm:text-lg text-muted">
        Premier men's lacrosse club. Compete. Connect. Conquer.
      </p>

      {showCTA && (
        <div class="mt-8 flex flex-col sm:flex-row gap-3">
          <a
            href="/contact"
            class="inline-flex items-center justify-center px-5 py-2.5 bg-foreground text-background font-mono text-xs font-medium tracking-wide transition-opacity hover:opacity-80"
          >
            Get in Touch â†’
          </a>
          <a
            href="/schedule"
            class="inline-flex items-center justify-center px-5 py-2.5 border border-border text-foreground font-mono text-xs font-medium tracking-wide transition-colors hover:bg-foreground/5"
          >
            View Schedule
          </a>
        </div>
      )}
    </div>
  </div>
</section>
