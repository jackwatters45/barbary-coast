  },
  {
    date: "2025-02-18",
    time: "7:00 PM",
    type: "practice" as const,
    location: "Beach Chalet Fields",
  },
  {
    date: "2025-02-22",
    time: "2:00 PM",
    type: "game" as const,
    opponent: "East Bay Riptide",
    location: "Kezar Stadium",
  },
  {
    date: "2025-02-25",
    time: "7:00 PM",
    type: "practice" as const,
    location: "Beach Chalet Fields",
  },
  {
    date: "2025-03-01",
    time: "11:00 AM",
    type: "game" as const,
    opponent: "Marin Lacrosse Club",
    location: "Boxer Stadium",
  },
  {
    date: "2025-03-04",
    time: "7:00 PM",
    type: "practice" as const,
    location: "Beach Chalet Fields",
  },
  {
    date: "2025-03-08",
    time: "1:00 PM",
    type: "game" as const,
    opponent: "South Bay Storm",
    location: "Crocker Amazon Playground",
  },
  {
    date: "2025-03-11",
    time: "7:00 PM",
    type: "practice" as const,
    location: "Beach Chalet Fields",
